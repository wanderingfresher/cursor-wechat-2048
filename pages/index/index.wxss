/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #faf8ef;
}

.title {
  font-size: 80rpx;
  font-weight: bold;
  color: #776e65;
  margin-bottom: 60rpx;
}

.start-btn {
  padding: 30rpx 60rpx;
  background-color: #8f7a66;
  border-radius: 10rpx;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
  transition: all 0.3s ease;
}

.start-btn:active {
  transform: scale(0.95);
}
